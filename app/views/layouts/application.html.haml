!!! 5
%html
  %head
    %title 
      =yield :title
      (Bhojanam - A place for foodies)
    = stylesheet_link_tag 'screen.css', :media => 'screen, projection'
    = stylesheet_link_tag 'print.css', :media => 'print'
    /[if IE]
      = stylesheet_link_tag 'ie.css', :media => 'screen, projection'
    %link(href="http://fonts.googleapis.com/css?family=Slackey:regular" rel="stylesheet" type="text/css")

    = javascript_include_tag :defaults
    = csrf_meta_tag
  %body
    .notice= flash[:notice]
    #header
      %h1= link_to "Bhojanam", root_path
    #navigation
      %ul
        %li.selected= link_to "Restaurants", restaurants_path
        %li= link_to "Reviews", restaurants_path
    #content
      #left
        =yield
      #right
        .sidebar_box
          Side bar content goes here
    #footer
      Powered by RailsPundit
